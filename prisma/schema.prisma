generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id           Int       @id @default(autoincrement())
  title        String    @db.VarChar(120)   // 最大120文字
  details      String?   @db.VarChar(10000) // 最大10,000文字
  deadline     DateTime?
  status       String    @default("未完了") @db.VarChar(20)
  completed_at DateTime?
}
